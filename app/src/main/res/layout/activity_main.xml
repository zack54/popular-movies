<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/main_connection_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_padding"
            android:text="@string/internet_connection_error_message"
            android:textSize="@dimen/text_size"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/main_loading_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/view_padding"
            android:text="@string/main_louading_error_message"
            android:textSize="@dimen/text_size"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/main_loading_indicator"
            android:layout_height="@dimen/progress_bar_size"
            android:layout_width="@dimen/progress_bar_size"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>

</layout>